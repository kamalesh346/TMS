generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // ⚠️ Consider switching to PostgreSQL if scaling or concurrency becomes an issue
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      String
  createdAt DateTime  @default(now())

  bookings  Booking[]
}

model Booking {
  id                Int      @id @default(autoincrement())
  userId            Int
  purpose           String
  pickup            String   // Predefined location
  delivery          String   // Predefined location
  itemDesc          String
  weight            Float    // Always in KG
  vehicleType       String  @default("Unknown")
  vehicleLength     Float   @default(0)
  vehicleBreadth    Float   @default(0)
  vehicleHeight     Float   @default(0)
  requiredStartTime DateTime @default(now())
  requiredEndTime   DateTime @default(now())

  status            String   @default("pending")
  createdAt         DateTime @default(now())

  user              User     @relation(fields: [userId], references: [id])
}

model Location {
  id    Int    @id @default(autoincrement())
  name  String @unique
}
